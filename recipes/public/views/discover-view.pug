#discover-view.content
  i.fa.fa-arrow-left.fa-2x(id= 'back-button-discover')
  #arrow-up
    img(src='images/arrow_up.png')
  .grid-block
    each recipe in results
      .grid-cell
        if recipe._id
          img.recipe-picture(src= './uploads/' + recipe._id + '.' + recipe.image id = recipe._id alt='Food')
          .category-title
            div= recipe.title
        else
          img.recipe-picture(src= 'https://spoonacular.com/recipeImages/' + recipe.image id = recipe.id alt='Food')
          .category-title
            div= recipe.title

  #arrow-down
    img(src='images/arrow_down.png')
