#recipe-view

  i.fa.fa-arrow-left.fa-2x(id= 'back-button')
  #recipes-swipe
    i.fa.fa-angle-left.fa-4x(id= 'arrow-back')
    #recipe-title= recipe.title
    i.fa.fa-angle-right.fa-4x(id= 'arrow-next')

  #recipe-subtitle= "Author: " + recipe.author
  #recipe-readyIn= "Ready in: " + recipe.readyInMinutes
  #recipes-swipe
    #image-actual.recipe-preview
      img.recipe-picture(src=recipe.image.actual, alt='Food')
    #recipe-ingredients
      #ingredient-title
        b Ingredients
      span#ingredients
        ul
          each ingredient in recipe.ingredients
            li= ingredient.quantity + ' ' + ingredient.name
  #recipe-intolerances
    #recipe-cross
      span.i.fa.fa-times.fa-1x(id='glutenfree')
      span.True= "Gluten Free"
    #recipe-cross
      span.i.fa.fa-times.fa-1x(id='dairyfree')
      span.True= "Dairy Free"
    #recipe-cross
      span.i.fa.fa-times.fa-1x(id='vegan')
      span.True= "Vegan"
  #recipe-text


    #recipe-preparation
      #preparation-title
        b Preparation
        br
      span#preparation
      p= recipe.instructions

  #votes
    div
      i.fa.fa-thumbs-up.fa-3x#up
      br
      span.up-text= recipe.upvotes
    div
      i.fa.fa-thumbs-down.fa-3x#down
      br
      span.down-text= recipe.downvotes
  #my-comment
    input#username(type='text', placeholder='Insert your name')
    textarea(rows='2', cols='50', id='comment' placeholder='Insert here your comment about this recipe')
    button(type='button', id='submit-comment') Submit
    #recipe-comments
      each comment in recipe.comments
        .recipe-comments-element
          span.username-text= comment.username
          span.comment-text= comment.comment
  #toast
    div
