#recipe-view
  #recipe-title= recipe.title
  #recipe-subtitle= "Author: " + recipe.author
  #recipe-readyIn= "Ready in: " + recipe.readyInMinutes + " minutes"
  #recipes-swipe
    img#arrow-back.arrow(src='images/left_arrow.png', alt='Food')
    #image-actual.recipe-preview
      img.recipe-picture(src=recipe.image.actual, alt='Food')
    img#arrow-next.arrow(src='images/right_arrow.png', alt='Food')
  #recipe-text
    #recipe-ingredients
      b Ingredients
      br
      span#ingredients
        ul
          each ingredient in recipe.ingredients
            li= ingredient.quantity + ' ' + ingredient.name
    #recipe-division
    #recipe-preparation
      b Preparation
      br
      span#preparation
      p= recipe.instructions
  #votes
    img#up.vote(src='images/icons/up.png', alt='Up')
    span.up-text= recipe.upvotes
    img#down.vote(src='images/icons/down.png', alt='Down')
    span.down-text= recipe.downvotes
  #my-comment
    textarea(rows='4', cols='50', id='comment')
    button(type='button',r id='submit-comment') Submit
  #recipe-comments
    each comment in recipe.comments
      .recipe-comments-element
        span.comment-text= comment
